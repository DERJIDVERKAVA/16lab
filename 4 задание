using System;

public class Book
{
    private string[] chapters;
    
    public Book()
    {
        chapters = new string[10];
    }
    
    public string this[int index]
    {
        get
        {
            if (index < 0  index >= chapters.Length  chapters[index] == null)
                return "Глава не существует";
            return chapters[index];
        }
        set
        {
            if (index >= chapters.Length)
            {
                Array.Resize(ref chapters, index + 1);
            }
            chapters[index] = value;
        }
    }
    
    public override string ToString()
    {
        string result = "";
        for (int i = 0; i < chapters.Length; i++)
        {
            if (chapters[i] != null)
            {
                result += $"{i + 1}. {chapters[i]}\n";
            }
        }
        return result;
    }
}

class Program
{
    static void Main(string[] args)
    {
        var book = new Book();
        book[0] = "Введение";
        book[1] = "Глава 1";
        Console.WriteLine(book[0]);
        Console.WriteLine(book);
    }
}
