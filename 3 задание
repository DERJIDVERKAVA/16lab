using System;

public class Temperature : IEquatable<Temperature>
{
    public double Celsius { get; set; }
    
    public Temperature(double celsius)
    {
        Celsius = celsius;
    }
    
    public static bool operator >(Temperature t1, Temperature t2)
    {
        return t1.Celsius > t2.Celsius;
    }
    
    public static bool operator <(Temperature t1, Temperature t2)
    {
        return t1.Celsius < t2.Celsius;
    }
    
    public static bool operator >=(Temperature t1, Temperature t2)
    {
        return t1.Celsius >= t2.Celsius;
    }
    
    public static bool operator <=(Temperature t1, Temperature t2)
    {
        return t1.Celsius <= t2.Celsius;
    }
    
    public static bool operator ==(Temperature t1, Temperature t2)
    {
        if (ReferenceEquals(t1, t2)) return true;
        if (ReferenceEquals(t1, null) || ReferenceEquals(t2, null)) return false;
        return t1.Celsius.Equals(t2.Celsius);
    }
    
    public static bool operator !=(Temperature t1, Temperature t2)
    {
        return !(t1 == t2);
    }
    
    public override bool Equals(object obj)
    {
        if (obj is Temperature other)
            return this.Celsius.Equals(other.Celsius);
        return false;
    }
    
    public bool Equals(Temperature other)
    {
        if (other is null) return false;
        return this.Celsius.Equals(other.Celsius);
    }
    
    public override int GetHashCode()
    {
        return Celsius.GetHashCode();
    }
    
    public override string ToString()
    {
        return $"{Celsius}Â°C";
    }
}

class Program
{
    static void Main(string[] args)
    {
        var t1 = new Temperature(25);
        var t2 = new Temperature(30);
        Console.WriteLine(t1);
        Console.WriteLine(t2 > t1);
        Console.WriteLine(t1 == new Temperature(25));
    }
}
